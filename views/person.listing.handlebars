<!-- views/person.listing.handlebars -->

<h3>Personal</h3>
<hr>
<form method="GET" action="/people/new">
    <button class="btn btn-primary" >Ny Person</button>
</form>
<hr>

<table class="table table-striped table-responsive table-hover table-clickable table-href">
    <thead>
    <tr>
        <td colspan="4">{{> pagination }}</td>
    </tr>
    <tr>
        <th>#</th>
        <th>Förnamn</th>
        <th>Lastname</th>
        <th>Anställningsnummer</th>
    </tr>
    </thead>
    <tbody>
    {{#each entries}}
    <tr data-href='/people/{{_id}}'>
        <th scope="row">{{tableIndex @index pagination=../pagination}}</th>
        <td>{{lastname}}</td>
        <td>{{firstname}}</td>
        <td>{{employee_number}}</td>
    </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="4">{{> pagination }}</td>
    </tr>
    </tfoot>
</table>