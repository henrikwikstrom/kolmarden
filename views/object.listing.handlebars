<!-- views/objects.listing.handlebars -->

<h3>Utrustning</h3>
<hr>
<form method="GET" action="/objects/new">
    <button class="btn btn-primary" >Nytt Objekt</button>
</form>
<hr>

<table class="table table-striped table-responsive table-hover table-clickable table-href">
    <thead>
    <tr>
        <td colspan="4">{{> pagination }}</td>
    </tr>
    <tr>
        <th>#</th>
        <th>Namn</th>
        <th>Kategori</th>
        <th>Utl√•nad Till</th>
    </tr>
    </thead>
    <tbody>
    {{#each entries}}
        <tr data-href='/objects/{{_id}}'>
            <th scope="row">{{tableIndex @index pagination=../pagination}}</th>
            <td>{{name}}</td>
            <td>{{category}}</td>
            <td>{{#if loan.project}}{{loan.project.name}}{{else}}{{loan.person.firstname}} {{loan.person.lastname}}{{/if}}</td>
        </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="4">{{> pagination }}</td>
    </tr>
    </tfoot>
</table>